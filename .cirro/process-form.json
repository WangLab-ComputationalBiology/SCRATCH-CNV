{
    "ui": {},
    "form": {
      "title": "SCRATCH CNV",
      "type": "object",
      "properties": {
        "pipeline_parameters": {
          "title": "Pipeline parameters",
          "type": "object",
          "properties": {
            "seurat_object": {
              "type": "string",
              "title": "Seurat RDS",
              "file": "**/*_cluster_object.RDS",
              "pathType": "dataset",
              "description": "Select the object for clustering"
            },
            "organism": {
              "type": "string",
              "title": "Organism",
              "default": "Human",
              "enum": [
                "Human"
              ]
            }
          }
        },
        "infercnv_parameters": {
          "title": "inferCNV parameters",
          "type": "object",
          "properties": {
            "input_reference_object": {
              "type": "string",
              "title": "Reference annotation",
              "file": "**/*_reference_table.csv",
              "pathType": "dataset",
              "description": "A tabular including the cell barcodes and status (Normal or Tumor/Unknown)"
            },        
            "input_analysis_mode": {
              "type": "string",
              "title": "Analysis mode",
              "default": "samples",
              "enum": [
                "samples"
              ]
            },
            "skip_infercnv": {
              "type": "boolean",
              "title": "Skipping inferCNV annotation"
            }
          }
        }
      }    
